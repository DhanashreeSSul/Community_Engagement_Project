    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            const apiKey = '579b464db66ec23bdd0000018073a827c89b44077e0e13abdafd1426';
            const apiUrl = `https://api.data.gov.in/resource/c622afa6-6515-419e-8d48-001358fe9aba?api-key=${apiKey}&format=json`;

            async function fetchSchemes() {
                try {
                    const response = await fetch(apiUrl, {
                        method: 'GET',
                        headers: { 'Accept': 'application/json' }
                    });

                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }

                    const data = await response.json();
                    
                    if (!data.records || !Array.isArray(data.records)) {
                        throw new Error("Invalid data format received from API");
                    }

                    return data.records;
                } catch (error) {
                    console.error("Error fetching schemes:", error);
                    throw error;
                }
            }

            function displaySchemes(schemes) {
                const container = document.getElementById('schemeResults');
                container.innerHTML = '';

                if (!schemes || schemes.length === 0) {
                    container.innerHTML = `
                        <div class="error-message">
                            No schemes available at the moment. Please try again later.
                        </div>
                    `;
                    return;
                }

                schemes.forEach((scheme, index) => {
                    const schemeDiv = document.createElement('div');
                    schemeDiv.classList.add('scheme');

                    const schemeName = scheme.name_of_mission__scheme || `Scheme ${index + 1}`;
                    const budgetEstimate = scheme._2014_15___be ? 
                        `<span class="amount">₹${scheme._2014_15___be.toLocaleString()} crore</span>` : 
                        '<span class="amount">Not Available</span>';
                    const revisedEstimate = scheme._2014_15___re ? 
                        `<span class="amount">₹${scheme._2014_15___re.toLocaleString()} crore</span>` : 
                        '<span class="amount">Not Available</span>';
                    const actualExpenditure = scheme._2014_15___actual_exp_ ? 
                        `<span class="amount">₹${scheme._2014_15___actual_exp_.toLocaleString()} crore</span>` : 
                        '<span class="amount">Not Available</span>';

                    schemeDiv.innerHTML = `
                        <h3>${schemeName}</h3>
                        <p><strong>Budget Estimate (2014-15):</strong> ${budgetEstimate}</p>
                        <p><strong>Revised Estimate (2014-15):</strong> ${revisedEstimate}</p>
                        <p><strong>Actual Expenditure (2014-15):</strong> ${actualExpenditure}</p>
                        <button disabled>Learn More</button>
                    `;
                    container.appendChild(schemeDiv);
                });
            }

            async function loadSchemes() {
                const container = document.getElementById('schemeResults');
                container.innerHTML = `
                    <div class="loading">
                        <p>Loading schemes...</p>
                        <div class="spinner"></div>
                    </div>
                `;

                try {
                    const schemes = await fetchSchemes();
                    displaySchemes(schemes);
                } catch (error) {
                    container.innerHTML = `
                        <div class="error-message">
                            Failed to load schemes: ${error.message}. Please try again later.
                        </div>
                    `;
                }
            }

            await loadSchemes();
        });
    </script>
</body>
